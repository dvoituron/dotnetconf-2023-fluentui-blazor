@page "/counter"

<PageTitle>Counter</PageTitle>

<FluentLabel Typo="Typography.PageTitle">Counter</FluentLabel>

<FluentCard MinimalStyle="true" Width="400px" Height="400px">
    <FluentStack VerticalGap="10" Orientation="Orientation.Vertical">
        <FluentLabel role="status">Current count: @currentCount</FluentLabel>

        <FluentButton Appearance="Appearance.Accent"
                      OnClick="IncrementCount">
            Click me
        </FluentButton>
    </FluentStack>
</FluentCard>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
